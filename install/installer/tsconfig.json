{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true
    },
    "ts-node": {
        "esm": true
    }
}