{

  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "preserveSymlinks": true,
    "baseUrl": "./",
    "paths": {
      "util": ["./util"],
      "util/*": ["./util/*"]
    }
  }
}
